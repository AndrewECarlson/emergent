# Makefile for gopy pkg generation of python bindings to emergent
# File is generated by gopy (will not be overwritten though)
# gopy exe -vm=python3 -exclude=driver,oswin,palette,plotter,vg -main="runtime.LockOSThread(); gimain.Main(func() {  GoPyMainRun() })" github.com/emer/emergent math/rand github.com/goki/gi github.com/goki/ki/ki gonum.org/v1/plot

PYTHON=python3
PIP=$(PYTHON) -m pip

all: gen

install: install-pkg install-exe

gen:
	gopy exe -vm=python3 -exclude=driver,oswin -main="runtime.LockOSThread(); gimain.Main(func() {  GoPyMainRun() })" github.com/emer/emergent math/rand github.com/goki/gi github.com/goki/ki/ki

build:
	$(MAKE) -C emergent build

install-pkg:
	# this does a local install of the package, building the sdist and then directly installing it
	rm -rf dist build */*.egg-info *.egg-info
	$(PYTHON) setup.py sdist
	$(PIP) install dist/*.tar.gz

install-exe:
	# install executable into /usr/local/bin
	cp emergent/pyemergent /usr/local/bin/

